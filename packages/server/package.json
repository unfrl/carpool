{
    "name": "@carpool/server",
    "version": "0.0.0",
    "description": "description",
    "author": "KiwiLabs",
    "license": "MIT",
    "scripts": {
        "build": "tsc -p tsconfig.build.json",
        "format": "prettier --write \"src/**/*.ts\"",
        "start": "ts-node -r tsconfig-paths/register src/main.ts",
        "dev-prep": "docker stop -t 2 carpool_postgres carpool_adminer carpool_redis carpool_redis_commander ; docker-compose up -d postgres adminer redis redis_commander",
        "start:dev": "yarn run dev-prep ; nodemon",
        "start:debug": "yarn run dev-prep ; nodemon --config nodemon-debug.json",
        "prestart:prod": "rimraf dist && npm run build",
        "start:prod": "node dist/main.js",
        "lint": "tslint -p tsconfig.json -c tslint.json",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "build:client": "autorest api-swagger.yaml"
    },
    "dependencies": {
        "@nest-modules/mailer": "^1.1.3",
        "@nestjs/common": "^5.4.0",
        "@nestjs/core": "^5.4.0",
        "@nestjs/jwt": "^0.3.0",
        "@nestjs/passport": "^5.1.0",
        "@nestjs/swagger": "^3.1.0",
        "@nestjs/typeorm": "^5.3.0",
        "@types/ioredis": "^4.0.18",
        "bcrypt": "^3.0.4",
        "class-transformer": "^0.2.3",
        "class-validator": "^0.10.1",
        "guid-typescript": "^1.0.9",
        "ioredis": "^4.14.1",
        "passport": "^0.4.0",
        "passport-jwt": "^4.0.0",
        "pg": "^7.8.2",
        "pg-hstore": "^2.3.2",
        "reflect-metadata": "^0.1.13",
        "rimraf": "^2.6.2",
        "rxjs": "^6.2.2",
        "swagger-ui-express": "^4.1.1",
        "typeorm": "^0.2.15",
        "typescript": "^3.0.1"
    },
    "devDependencies": {
        "@nestjs/testing": "^6.8.0",
        "@types/bcrypt": "^3.0.0",
        "@types/express": "^4.16.0",
        "@types/jest": "^23.3.1",
        "@types/node": "^10.7.1",
        "@types/supertest": "^2.0.5",
        "autorest": "^2.0.4283",
        "jest": "^23.5.0",
        "nodemon": "^1.18.3",
        "prettier": "^1.14.2",
        "supertest": "^3.1.0",
        "ts-jest": "^23.1.3",
        "ts-loader": "^4.4.2",
        "ts-node": "^7.0.1",
        "tsconfig-paths": "^3.5.0",
        "tslint": "5.11.0"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "test",
        "testRegex": ".test.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}
