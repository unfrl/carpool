{
    "name": "carpool",
    "version": "1.0.0",
    "description": "",
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 0",
        "start:all": "concurrently -k \"yarn start:common\" \"yarn start:core\" \"yarn start:web\" \"yarn start:server\"",
        "start:common": "cd packages/common && yarn watch",
        "start:core": "cd packages/core && yarn watch",
        "start:web": "cd packages/web && yarn start",
        "start:server": "cd packages/server && yarn start:dev",
        "generate:client": "yarn build:client && yarn compile:client",
        "build:client": "cd packages/server && yarn build:client",
        "compile:client": "cd packages/client && yarn build",
        "build:common": "cd packages/common && yarn build",
        "build:core": "cd packages/core && yarn build",
        "cleanup:containers": "docker stop carpool_postgres carpool_redis carpool_maildev; docker rm carpool_postgres carpool_redis carpool_maildev",
        "postinstall": "yarn build:common && yarn build:core"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "concurrently": "^4.1.2",
        "prettier": "^1.19.1"
    },
    "engines": {
        "node": "12.13.1"
    }
}